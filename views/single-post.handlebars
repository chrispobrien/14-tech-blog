<article class="border-solid border-slate-800 border-2 m-2">
    <div class="bg-slate-800 text-white text-lg font-bold p-2 flex flex-row">
        <div class="justify-left grow">
            {{post.post_title}}
        </div>
        <div class="justify-right">
            Posted by {{user.username}} on {{format_date post.created_at}}
        </div>
    </div>
    <div class="bg-white p-2">
        {{post.post_text}}
    </div>
</article>
    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea name="comment-body" class="border"></textarea>
        </div>
        <div>
            <button type="submit">add comment</button>
            <button type="button" class="upvote-btn">upvote</button>
        </div>
    </form>
    {{/if}}
{{> comments post.comments}}

{{#if loggedIn}}
<script src="/assets/js/comment.js"></script>
{{/if}}